<% for i in (0..9).step(2)%>
    <div class="column">
        <% for j in (0..1) %>
            <% puts @results[i+j]['synopsis'] %>
            <% puts %>
            <div class="card mb-3">
                <div class="card-image">
                    <figure class="image is-128x171">
                        <%= image_tag @results[i+j]['image_url']%>
                    </figure>
                </div>
                <div class="card-content">
                    <div class="content">
                        <h1><%= @results[i+j]['title'] %></h1>
                        <b>Score: </b><%= @results[i+j]['score'] %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% end %>